<%= form_with(model: miniatura, class: "contents") do |form| %>
  <% if miniatura.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(miniatura.errors.count, "error") %> prohibited this miniatura from being saved:</h2>

      <ul class="list-disc ml-6">
        <% miniatura.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :descricao %>
    <%= form.text_field :descricao, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": miniatura.errors[:descricao].none?, "border-red-400 focus:outline-red-600": miniatura.errors[:descricao].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :colecao %>
    <%= form.text_field :colecao, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": miniatura.errors[:colecao].none?, "border-red-400 focus:outline-red-600": miniatura.errors[:colecao].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :linha %>
    <%= form.text_field :linha, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": miniatura.errors[:linha].none?, "border-red-400 focus:outline-red-600": miniatura.errors[:linha].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :marca_carro %>
    <%= form.text_field :marca_carro, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": miniatura.errors[:marca_carro].none?, "border-red-400 focus:outline-red-600": miniatura.errors[:marca_carro].any?}] %>
